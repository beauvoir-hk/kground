    <script>
        $('#check_admin').click(function(){
            const input_id = $('#_id').val()
            // alert("input_id=",input_id)
            // ajax을 이용하여 서버와 비동기 통신
            // 해당하는 id가 데이터베이스에 존재하는가?
            $.ajax(
                {
                    url : '/check_admin',   //비동기 통신을 할 주소값
                    method : 'get', 
                    datatype : 'json', 
                    data : {
                        _id : input_id,
                    }
                }
            )
            .done(function(result){
                if(result){
                    $('#info').toggleClass('display')
                    $('#check_id').toggleClass('display')
                    $('#_id').attr('readonly', 'true')
                }else{
                    // alert("이미 케이그라운드의 회원이십니다.")
                }
            })
        })
