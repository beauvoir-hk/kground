    <script>
        $('#check_numeric6').click(function(){
            const _input_numeric6 = $('#_numeric6').val()
            input_numeric6=_input_numeric6.trim()
            const _input_id = $('#_id').val()
            input_id=_input_id.trim()
            let data = 0
