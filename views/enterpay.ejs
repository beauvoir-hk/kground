            // 해당하는 id가 데이터베이스에 존재하는가?
            $.ajax(
                {
                    url : '/check_numeric6',   //비동기 통신을 할 주소값
                    method : 'get', 
                    datatype : 'json', 
                    data : {
                        _id : input_id,
                        _numeric6 : input_numeric6,
                        state : data
                    }
                }
            )
            .done(function(result){

                if(result){
                    // display 라는 class가 display none이기 때문에 
                    // 해당하는 class를 가지고 있지 않다면 화면에 표시
                    $('#_id').attr('readonly', 'true')
